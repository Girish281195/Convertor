                android:layout_height="match_parent"
                android:gravity="right"
                android:paddingRight="5dp"
                android:layout_weight="3"
                android:text="" />

            <TextView
                android:id="@+id/textView444Am"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
